    <h1>Pedra, Papel e Tesoura</h1>
    <div class="choices">
        <button onclick="playGame('pedra')">Pedra</button>
        <button onclick="playGame('papel')">Papel</button>
        <button onclick="playGame('tesoura')">Tesoura</button>
    </div>
    <div id="result"></div>

    <script>
        function playGame(userChoice) {
            const choices = ['pedra', 'papel', 'tesoura'];
            const computerChoice = choices[Math.floor(Math.random() * 3)];

            let resultText;

            if (userChoice === computerChoice) {
                resultText = 'Empate!';
            } else if (
                (userChoice === 'pedra' && computerChoice === 'tesoura') ||
                (userChoice === 'papel' && computerChoice === 'pedra') ||
                (userChoice === 'tesoura' && computerChoice === 'papel')
            ) {
                resultText = 'VocÃª ganhou! ðŸŽ‰';
            } else {
                resultText = 'VocÃª perdeu! ðŸ˜¢';
            }

            document.getElementById('result').textContent = `VocÃª escolheu ${userChoice}, o computador escolheu ${computerChoice}. ${resultText}`;
        }
    </script>
